<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KontrolInputActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/MyScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/hitam"/>

            <LinearLayout
                android:id="@+id/layout_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:visibility="gone">
                <CheckBox
                    android:id="@+id/cb_pil1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan 1"/>
                <CheckBox
                    android:id="@+id/cb_pil2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan 2"/>
                <CheckBox
                    android:id="@+id/cb_pil3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan 3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:visibility="gone">
                <RadioGroup
                    android:id="@+id/rd_pil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_pil1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilihan 1"/>
                    <RadioButton
                        android:id="@+id/rd_pil2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilihan 2"/>
                    <RadioButton
                        android:id="@+id/rd_pil3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilihan 3"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:visibility="gone">
                <ToggleButton
                    android:id="@+id/tg_nyala_mati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textOn="Toggle Button : Nyala"
                    android:textOff="Toggle Button : Mati"/>
                <Switch
                    android:id="@+id/swc_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Switch"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:visibility="gone">
                <Spinner
                    android:id="@+id/spn_pil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                </Spinner>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/hitam"/>

            <Button
                android:id="@+id/btn_proses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proses"
                style="@style/MyButton"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimaryLight">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@color/colorAccent"
                    android:text="PESAN"
                    android:textAlignment="center"
                    android:textColor="@color/putih"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_pesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/putih"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Pesan"
                style="@style/MyButton"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>